<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="#282b2c"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/dc_detail_nav_bar_btn_left"
        android:layout_width="0dip"
        android:layout_height="40dip"
        android:layout_weight="1"
        android:background="@null"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:gravity="center"
        android:onClick="onNavBarLeftButtonClick"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:layout_width="0dip"
        android:layout_height="40dip"
        android:layout_weight="3"
        android:background="#282b2c"
        android:gravity="center"
        android:onClick="onNavBarTitleClick"
        android:singleLine="true"
        android:text="数据采集"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/dc_detail__nav_bar_btn_right"
        android:layout_width="0dip"
        android:layout_height="40dip"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:background="@null"
        android:src="@drawable/menu_download"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</LinearLayout>